<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.gregttn.roximityandroiddemo.app.DemoActivity">

    <TextView
        android:id="@+id/beaconIdTextView"
        android:text="@string/beaconId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:textColor="@android:color/black"
        style="@style/HeaderText"/>

    <TextView
        android:id="@+id/beaconNameTextView"
        android:text="@string/beaconName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:textColor="@android:color/black"
        style="@style/HeaderText"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/rangeTextView"
        android:text="@string/range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:textColor="@android:color/black"
        style="@style/RangeText"/>

</LinearLayout>
